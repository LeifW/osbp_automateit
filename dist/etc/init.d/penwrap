#! /bin/sh
### BEGIN INIT INFO
# Provides:          penwrap
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start/stop penwrap.
# Description:       penwrap is a wrapper for the pen proxy.
### END INIT INFO

# FIXME add "status" support

PATH=/usr/local/bin:/usr/local/sbin:/usr/sbin:/usr/bin:/sbin:/bin

. /lib/init/vars.sh
. /lib/lsb/init-functions

pidpath=/var/run
host=burnside.pragmaticraft.com

do_start() {
    for port in 80 443; do
        pidfile=/var/run/pen.$host.$port.pid
		start-stop-daemon --start --quiet --pidfile $pidfile \
			--exec /usr/bin/pen -- -p $pidfile $port $host:$port
    done
}

do_stop() {
    for port in 80 443; do
        pidfile=/var/run/pen.$host.$port.pid
		start-stop-daemon --stop --quiet --pidfile $pidfile
    done
}

case "$1" in
  start|"")
	do_start
	;;
  restart|reload|force-reload)
	echo "Error: argument '$1' not supported" >&2
	exit 3
	;;
  stop)
	# No-op
	do_stop
	;;
  *)
	echo "Usage: hostname.sh [start|stop]" >&2
	exit 3
	;;
esac
