NameVirtualHost *

<VirtualHost *>
    VirtualDocumentRoot /var/www/bridgepdx.org-wordpress
    ServerName bridgepdx.org
    ServerAlias www.bridgepdx.org bridgepdx
    ErrorLog /var/log/apache2/bridgepdx.org-wordpress.error.log
    TransferLog /var/log/apache2/bridgepdx.org-wordpress.access.log
</VirtualHost>

